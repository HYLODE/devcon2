{
    // could have used one of the default images instead
    // see https://containers.dev/templates
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "features": {
        // https://github.com/devcontainers/features/tree/main/src/python
        "ghcr.io/devcontainers/features/python:1": {
            // You must specify "none" here else a different version of python will be installed over the one you've specified in Dockerfile
            "version": "none"
            // "installJupyterlab"
        }
    },
    "customizations": {
        "vscode": {
            // extensions installed into devcontainer
            "extensions": ["ms-azuretools.vscode-docker"]
        }
    },
    // 8050 is the default dash port
    "forwardPorts": [8400, 8050]
}